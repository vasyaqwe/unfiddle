{
  "name": "ledgerblocks",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "concurrently": "^9.1.2",
    "turbo": "^2.3.3",
    "typescript": "^5.8.2"
  },
  "packageManager": "bun@1.2.8",
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=@ledgerblocks/web",
    "build:www": "turbo build --filter=@ledgerblocks/www",
    "start": "turbo start",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "bun --filter @ledgerblocks/core db:generate",
    "db:migrate": "bun --filter @ledgerblocks/core db:migrate",
    "db:push": "bun --filter @ledgerblocks/core db:push",
    "db:drop": "bun --filter @ledgerblocks/core db:drop",
    "db:studio": "bun --filter @ledgerblocks/core db:studio",
    "dev": "turbo dev --parallel",
    "dev:db": "turso dev --db-file tmp/sqlite.db",
    "dev:api": "turbo dev --filter=@ledgerblocks/api",
    "dev:web": "turbo dev --filter=@ledgerblocks/web --filter=@ledgerblocks/ui --filter=@ledgerblocks/api",
    "dev:www": "turbo dev --filter=@ledgerblocks/www --filter=@ledgerblocks/ui",
    "format-lint": "biome check",
    "format-lint:fix": "biome check --write",
    "typecheck": "turbo typecheck"
  },
  "trustedDependencies": ["@biomejs/biome", "core-js", "esbuild", "workerd"],
  "workspaces": ["apps/*", "packages/*", "tooling/*"]
}
