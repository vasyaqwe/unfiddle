{
   "$schema": "https://turborepo.org/schema.json",
   "ui": "stream",
   "tasks": {
      "topo": {
         "dependsOn": ["^topo"]
      },
      "build": {
         "dependsOn": ["^build"],
         "outputs": [".cache/tsbuildinfo.json", "dist/**"],
         "inputs": [
            "src/**/*.tsx",
            "src/**/*.ts",
            "src/**/*.css",
            "!src/**/*.test.tsx",
            "!src/**/*.test.ts",
            "!src/**/*.spec.tsx",
            "!src/**/*.spec.ts",
            "!src/**/*.stories.tsx",
            "!src/**/*.stories.ts"
         ]
      },
      "dev": {
         "dependsOn": ["^dev"],
         "persistent": false,
         "cache": false
      },
      "typecheck": {
         "dependsOn": ["^topo", "^build"]
      },
      "migrate": {
         "cache": false,
         "interactive": true
      },
      "studio": {
         "cache": false,
         "persistent": true
      },
      "clean": {
         "cache": false
      },
      "test": {
         "dependsOn": ["^topo"],
         "inputs": [
            "vite.config.ts",
            "src/setup.ts",
            "src/**/*.ts",
            "src/**/*.tsx"
         ]
      },
      "test:ui": {
         "cache": false,
         "persistent": true
      },
      "//#format-lint": {},
      "//#format-lint:fix": {
         "cache": false
      },
      "//#clean": {
         "cache": false
      }
   }
}
